<h1>Books</h1>



<% @books.each do |book| %>
  
    <table>
      <tr class="list-wrap">
        <td class="list-box"><%= book.title %></td>
        <td class="list-box list-body"><%= book.body %></td>
        <td><%= link_to 'Show', "/books/show/#{book.id}" %></td>
        <td class="link-edit">
          <%= link_to "Edit", "/books/#{book.id}/edit" %>
        </td>
        <td>
          <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
        </td>
      </tr>
    </table>
  
<% end %>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="error-message"><%= @book.errors.count %> error occurred</div>
  <% @book.errors.full_messages.each do |message| %>
    <div><%= message %></div>
  <% end %>
<% end %>

<!--form_with部分-->
<%= form_with model: @books, url: '/books', method: :post do |f| %>



  <h4>Title</h4>
    <%= f.text_field :title %>

  <h4>Body</h4>
  <div class="text-body">
    <%= f.text_area :body %>
  </div>
  <div class="submit">
    <%= f.submit 'Create Book' %>
  </div>


<% end %>